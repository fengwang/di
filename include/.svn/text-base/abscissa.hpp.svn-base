/// @file abscissa.hpp
/// @brief Template abscissa container for Legendre-Gaussion quadratures.
/// @author wang feng

#ifndef _ABSCISSA_HPP_INCLUDED_WOIJADFO8IUY4KLJAFD8OUY498UYAFDKH3498YAFDKJIHSFDO
#define _ABSCISSA_HPP_INCLUDED_WOIJADFO8IUY4KLJAFD8OUY498UYAFDKH3498YAFDKJIHSFDO

#include <cstddef>
#include <array>
#include <algorithm>
#include <cmath>


namespace feng 
{
	/// Forward declaration.
    template<typename T, std::size_t STEP>
    struct abscissa;

	/// Template class abscissa, specialized when the integration times is 3.
	/// @param T element type stored in the container.
    template<typename T>
    struct abscissa<T, 3> : std::array<T, 3>
    {
		/// Default Constructor.
        abscissa()
        {
            const T x1 = 0.77459666924148337704; ///< \sqrt\frac{3}{5}
            const T x[3] = { -x1, T( 0 ), x1 };
            std::copy( x, x + 3, std::array<T,3>::begin() );
        }
    };


}//namespace feng






#endif//_ABSCISSA_HPP_INCLUDED_WOIJADFO8IUY4KLJAFD8OUY498UYAFDKH3498YAFDKJIHSFDO




